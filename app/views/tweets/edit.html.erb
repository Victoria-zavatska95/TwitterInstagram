 <% if @tweet.errors.any? %>
   <div id="error_explanation">
     <ul>
     <% @tweet.errors.full_messages.each do |msg| %>
       <li><%= msg %></li>
     <% end %>
     </ul>
   </div>
 <% end %>
<%= form_for @tweet, url: tweet_path(@tweet.id) do |f|%>
Your message <%= f.text_area :body, size: "30x10" %><br>
<%= f.submit "Create" %>
<% end %>